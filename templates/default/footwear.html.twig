{% include "default/header.html.twig" %}
<style>
	.filterImg {
		height: 300px;
		width: 300px;
		border-radius: 50%;
	}
</style>
<div class="container d-flex  justify-content-sm-between">
	<div>
		<a href="/men">
			<img class="filterImg" src="https://m.media-amazon.com/images/G/31/img21/shoes/Jupiter22/Halo/03._CB609936802_.jpg" alt="">
		</a>
	</div>
	<div>
		<a href="/women">
			<img class="filterImg" src="https://m.media-amazon.com/images/G/31/img21/shoes/XCM/Halo/footwear_womens__._CB637127133_.jpg" alt="">
		</a>
	</div>

	<div>
		<a href="/kids">
			<img class="filterImg" src="https://m.media-amazon.com/images/G/31/img21/shoes/XCM/Halo/kids._CB637127133_.jpg" alt="">
		</a>
	</div>
</div>
<div class="container d-flex flex-row ">
	<div style="width:40%; text-align:center; padding-right: 8rem;">
		Men's Footwear
	</div>
	<div style="width:40%; text-align:center;">
		Women's Footwear
	</div>
	<div style="width:40%;text-align:center; padding-left: 10rem;">
		Kid's Footwear
	</div>
</div>


<div class="container my-5">
	<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-5">
		​​​​
		{% for object in footwear %}
			<div class="col">
				<div class="card p-2" style="width: 25rem; height:30rem;">
					<img src="{{ object.getImage() }}" class="card-img-top" style="height:20rem;">
					<center>
						<div
							class="card-body">
							<h5 class="card-title">
									<p class="card-text">
										{{ object.getSelect().getFootwear().getBrand}}
										{{ object.getLookingFor() }}'s {{ object.getDescription() }}
									</p>
							</h5>
							<h5 class="card-title">&#8377;
								{{ object.getPrice() - ((object.getPrice()*object.getDiscount()/100)) }}
								<span style="font-size:15px;">
									<span style="text-decoration:line-through;">
										{{ object.getPrice() }}
									</span>
									({{ object.getDiscount() }}% off)
								</span>
							</h5>
							<button class="card-link btn btn-success" style="text-decoration:none;">Buy Now</button>
							<button class="card-link btn btn-success" style="text-decoration:none;">Add To Cart</button>
						</div>
					</center>
				</div>
			</div>
		{% endfor %}
		​​​​​​​​
	</div>
</div>


{% include "default/footer.html.twig" %}
