{% include "default/header.html.twig" %}

<style>
	.filterImg {
		height: 300px;
		width: 300px;
		border-radius: 20%;
	}
</style>
<div class="container d-flex  justify-content-sm-between">
	<div>
		<a href="/skincare">
			<img class="filterImg" src="https://m.media-amazon.com/images/G/31/img22/Beauty/aman/janart/halo-2._SS300_QL85_.png" alt="">
		</a>
	</div>
	<div>
		<a href="/haircare">
			<img class="filterImg" src="https://m.media-amazon.com/images/G/31/img22/Beauty/aman/janart/halo-3._SS300_QL85_.png" alt="">
		</a>
	</div>
	<div>
		<a href="/makeup">
			<img class="filterImg" src="https://m.media-amazon.com/images/G/31/img22/Beauty/aman/janart/halo-1._SS300_QL85_.png" alt="">
		</a>
	</div>
	<div>
		<a href="/fragnance">
			<img class="filterImg" src="https://m.media-amazon.com/images/G/31/img22/Beauty/aman/janart/halo-9._SS300_QL85_.png" alt="">
		</a>
	</div>
</div>
<div class="container d-flex flex-row ">
	<div style="width:40%; text-align:center; ">
		Skin Care
	</div>
	<div style="width:40%; text-align:center; ">
		Hair care
	</div>
	<div style="width:40%; text-align:center; padding-left: 2rem;">
		Make Up
	</div>
	<div style="width:40%; text-align:center; padding-left: 2rem;">
		Fragnance
	</div>
</div>




<div class="container my-5">
	<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-2">​​​​
		{% for object in beauty %}
			<div class="col">
				<div class="card p-2" style="width: 25rem; height:30rem;">
					<img src="{{ object.getImage() }}" class="card-img-top" style="height:20rem;">
					<center>
						<div class="card-body">
							<h5 class="card-title">
								{% if object.getBeautyType()=='makeup' %}
									<p class="card-text">
										{{ object.getSelectCategory().getMakeup().getBrand()}}
										{{ object.getDescription() }}
									</p>
                                {% elseif object.getBeautyType()=='HairCare' %}
                                    <p class="card-text">
										{{ object.getSelectCategory().getHairCare().getBrand() }}
                                        {{ object.getSelectCategory().getHairCare().getShampooBrand() }}
										{{ object.getDescription() }}
									</p>
                                {% elseif object.getBeautyType()=='SkinCare' %}
                                    <p class="card-text">
										{{ object.getSelectCategory().getSkinCare().getBrand() }}
										{{ object.getDescription() }}
									</p>
                                {% elseif object.getBeautyType()=='Fragnance' %}
                                    <p class="card-text">
										{{ object.getSelectCategory().getFragnance().getBrand() }}
                                        {{ object.getSelectCategory().getFragnance().getGender() }}
										{{ object.getDescription() }}
									</p>
								{% endif %}
							</h5>
							<h5 class="card-title">&#8377;
								{{ object.getPrice() - ((object.getPrice()*object.getDiscount()/100)) }}
								<span style="font-size:15px;">
									<span style="text-decoration:line-through;">
										{{ object.getPrice() }}
									</span>
									({{ object.getDiscount() }}% off)
								</span>
							</h5>
							<button class="card-link btn btn-success" style="text-decoration:none;">Buy Now</button>
							<button class="card-link btn btn-success" style="text-decoration:none;">Add To Cart</button>
						</p>
					</div>
				</center>
			</div>
		</div>
	{% endfor %}
</div></div>{% include "default/footer.html.twig" %}
